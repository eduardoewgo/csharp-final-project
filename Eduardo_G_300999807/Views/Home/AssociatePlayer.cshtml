@model Eduardo_G_300999807.Models.AssociationViewModel

@{
    ViewData["Title"] = "AssociatePlayer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="AssociatePlayer" method="post">
	<input type="hidden" name="Player.PlayerId" asp-for="Player.PlayerId" />
	
	<div class="form-group">
		<label for="PlayerName" asp-for="Player.Name">Player Name:</label>
		<input type="text" class="form-control" id="PlayerName" asp-for="Player.Name">
	</div>
	<div class="form-group">
		<label for="PlayerAge" asp-for="Player.Age">Player Age:</label>
		<input type="text" class="form-control" id="PlayerAge" asp-for="Player.Age">
	</div>
	<div class="form-group">
		<label for="PlayerOverall" asp-for="Player.Overall">Player Overall:</label>
		<input type="text" class="form-control" id="PlayerOverall" asp-for="Player.Overall">
	</div>

	<div class="form-group">
		<label for="Club">Club:</label>
		<select class="form-control" id="Club" asp-for="ClubId"
				asp-items="@(new SelectList(Model.Clubs, "ClubId", "Name"))"></select>
	</div>

	<button type="submit" class="btn btn-primary">Update</button>
	<button asp-action="Index" class="btn btn-dark">Cancel</button>
</form>

