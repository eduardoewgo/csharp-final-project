@model Eduardo_G_300999807.Models.FixtureAddViewModel
@{
	ViewData["Title"] = "FixtureAdd";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="FixtureAdd" method="post">
	<div class="form-group">
		@Html.Label("HomeClubId", "Home Club:")
		@Html.DropDownList("HomeClubId", new SelectList(Model.Clubs, "ClubId", "Name"), new { @class = "form-control" })
	</div>
	<div class="form-group">
		@Html.Label("AwayClubId", "Away Club:")
		@Html.DropDownList("AwayClubId", new SelectList(Model.Clubs, "ClubId", "Name"), new { @class = "form-control" })
	</div>
	<div class="form-group">
		<label for="MatchTime" asp-for="Fixture.MatchTime">MatchTime:</label>
		<input type="text" class="form-control" id="MatchTime" asp-for="Fixture.MatchTime">
	</div>

	<button type="submit" class="btn btn-primary">Create</button>
	<button asp-action="Index" class="btn btn-dark">Cancel</button>
</form>

@if (ViewBag.Error != null)
{
<div class="alert alert-danger" role="alert">
	@ViewBag.Error
	Hey
</div>
}
