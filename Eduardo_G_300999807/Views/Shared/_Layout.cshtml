<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />	
	<link href="~/css/StyleSheet.css" rel="stylesheet" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<!-- Image and text -->
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="#">
			<img src="~/images/logo.png" height="35" class="d-inline-block align-top" alt="">
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="ClubAdd">Add Club</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="ClubList">List Club</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="PlayerAdd">Add Players</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="ManagePlayers">Manage Players</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="FixtureList">Fixtures</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="Home" asp-action="FixtureAdd">Add Fixture</a>
				</li>
			</ul>
			@if (User.Identity.IsAuthenticated)
			{
				<ul class="navbar-nav ml-auto">
					<li class="nav-item">
						<p class="nav navbar-text">Logged as @User.Identity.Name</p>
					</li>
					<li class="nav-item" style="padding: 0 0 0 10px">
						<button type="button" class="btn btn-danger" onclick="@("window.location.href='" + @Url.Action("Logout", "Account") + "'");">Log out</button>
					</li>
				</ul>
			}
		</div>
	</nav>

	<div class="container m-3">
		@RenderBody()
	</div>
</body>
</html>
